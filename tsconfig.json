{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./build",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src"]
}
