{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./build",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "baseUrl": "src"
  },
  "include": ["src"]
}
